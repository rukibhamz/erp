# Enable error display for installer debugging
<IfModule mod_php.c>
    php_flag display_errors On
    php_flag display_startup_errors On
    php_flag log_errors On
    php_value error_reporting E_ALL
</IfModule>

# Allow access to installer files
<FilesMatch "\.(php|html|css|js)$">
    Order allow,deny
    Allow from all
</FilesMatch>

